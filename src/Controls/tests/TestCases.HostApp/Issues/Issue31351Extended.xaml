<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.Issues.Issue31351Extended"
             xmlns:ns="clr-namespace:Maui.Controls.Sample.Issues"
             Title="Issue 31351 Extended">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0"
               Text="Extended Custom CollectionView ScrollTo Test"
               FontSize="16"
               HorizontalOptions="Center"
               Margin="10"/>

        <StackLayout Grid.Row="1"
                     Orientation="Horizontal"
                     HorizontalOptions="Center"
                     Spacing="5"
                     Margin="5">
            <Button Text="Scroll Top"
                    AutomationId="ScrollToTop"
                    Command="{Binding ScrollToTopCommand}"
                    FontSize="12"/>
            <Button Text="Scroll 10"
                    AutomationId="ScrollTo10"
                    Command="{Binding ScrollTo10Command}"
                    FontSize="12"/>
            <Button Text="Scroll 30"
                    AutomationId="ScrollTo30"
                    Command="{Binding ScrollTo30Command}"
                    FontSize="12"/>
            <Button Text="Scroll Bottom"
                    AutomationId="ScrollToBottom"
                    Command="{Binding ScrollToBottomCommand}"
                    FontSize="12"/>
        </StackLayout>

        <ns:ExtendedCustomCollectionView Grid.Row="2"
                                         x:Name="extendedCollectionView"
                                         AutomationId="ExtendedCustomCollectionView"
                                         ItemsSource="{Binding Items}"
                                         BackgroundColor="LightGreen"
                                         SelectionMode="Single"
                                         Margin="10">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="8"
                            Margin="2"
                            BackgroundColor="White"
                            HasShadow="False"
                            BorderColor="Gray">
                        <StackLayout Orientation="Horizontal">
                            <Label Text="{Binding Index, StringFormat='[{0}]'}"
                                   VerticalOptions="Center"
                                   FontAttributes="Bold"
                                   TextColor="Blue"
                                   WidthRequest="50"/>
                            <Label Text="{Binding Name}"
                                   VerticalOptions="Center"
                                   FontSize="14"/>
                            <Label Text="{Binding Description}"
                                   VerticalOptions="Center"
                                   FontSize="12"
                                   TextColor="Gray"
                                   HorizontalOptions="EndAndExpand"/>
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </ns:ExtendedCustomCollectionView>

        <StackLayout Grid.Row="3"
                Orientation="Vertical"
                Spacing="5"
                Margin="10">
            <Label AutomationId="ScrollStatusLabel"
                   Text="Ready - No scrolling performed yet"
                   HorizontalOptions="Center"
                   BackgroundColor="LightYellow"
                   Padding="5"/>
            <Label AutomationId="SelectionStatusLabel"
                   Text="No selection"
                   HorizontalOptions="Center"
                   BackgroundColor="LightCyan"
                   Padding="5"/>
        </StackLayout>
    </Grid>
</ContentPage>
