<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.Issues.NonTabbedPage"
             AutomationId="TabBarIsVisibleFalse"
             Title="NonTabbedPage"
             Shell.TabBarIsVisible="False">
    <VerticalStackLayout>
        <Label 
            Text="This is a non-tabbed page"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

    <Button BackgroundColor="YellowGreen" AutomationId="BackToTabbedPageButton"
                Text="Back To Tabbed Page"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="Center"
                Clicked="BackToTabbedPage"/>

  </VerticalStackLayout>
</ContentPage>
